<p id="notice"><%= notice %></p>

<h1>Packages</h1>

<table>
  <thead>
    <tr>
      <th>Reference number</th>
      <th>User ID</th>
      <th>Location</th>
      <th>Destination</th>
      <th>Date</th>
      <th>Timeslot</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @packages.each do |package| %>
      <tr>
        <td><%= package.reference_number %></td>
        <td><%= package.user_id %></td>
        <td><%= package.location %></td>
        <td><%= package.destination %></td>
        <td><%= package.date %></td>
        <td><%= package.timeslot %></td>
        <td><%= link_to 'Show', package %></td>
        <td><%= link_to 'Edit', edit_package_path(package) %></td>
        <td><%= link_to 'Destroy', package, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Package', new_package_path %>
